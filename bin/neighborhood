#!/usr/bin/env python
import os, sys
from subprocess import call


# Parameters
INSTANCE = sys.argv[1] or 'warmup'
SOLUTION = sys.argv[2] or 'abc'
LOG_LEVEL = 5


def execute(cmd):
    cmd = list(map(str, cmd))
    call(cmd, shell=os.name == 'nt')


def main():
    cmd = ['npm', 'run', 'neighborhood', '--',
        "--instance", INSTANCE,
        "--solution", SOLUTION,
        "--log-level", LOG_LEVEL]

    execute(cmd)


if __name__ == '__main__':
    main()