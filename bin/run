#!/usr/bin/env python3
import datetime, os
from subprocess import call
from threading import Thread
import sys

_INSTANCES = {
    "typist": 10,
    "anyway": 10,
    "tic-tac-toe": 10
}

# ./bin/run "prime" "aman-aplan" "four" "ranges"
# ./bin/run "triples" "powers" "glob" "alphabetical"
# ./bin/run  "order" "abba" "warmup" "backrefs"
# ./bin/run "balance" "long-count" "anchors"

INSTANCES = {
    "warmup": 10,
    # "anchors": 10,
    # "ranges": 10,
    # "backrefs": 10,
    # "abba": 10,
    # "aman-aplan": 10,
    # "prime": 15,
    # "four": 10,
    # "triples": 30,
    # "glob": 20,
    # "powers": 10,
    # "long-count": 270,
    # "alphabetical": 20,
    # "order": 10,
    # "balance": 10,
}

SEEDS = [2967301147, 5600405384, 1632819610, 1412034944, 9724161943, 4037724866, # 5
         8370032799, 2767986875, 3141506592, 3313543896, 8657690939, 9696640194, # 11
         6621545651, 2492462788, 3404588599, 2330977742, 6361187489, 2805026820, # 17
         4323456912, 8361101999, 9935136846, 5217407358, 5619256299, 4560422870, # 23
         5236888092, 1337360711, 7659837985, 2521100877, 8801535107, 9651599436] # 29

SEEDS = [2418444990, 8770228658, 5509913591, 5775897932, 6274336524, 7806388237, # 5
         6959824128, 3203091782, 7192508185, 7252795713, 1804791673, 5050161248, # 11
         6993246125, 6706791600, 6103219022, 7348567586, 3414047639, 8357449705, # 17
