{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "downlevelIteration": true,
        "target": "ES2018",
        "lib": ["es6", "es2017"],
    },
    "include": [
        "./src/*.ts",
        "./src/**/*.ts",
        "./tests/*.ts",
        "./tests/**/*.ts",
        "./node_modules/@types/node/index.d.ts"
    ],
    "exclude": [
        "./tests/runner.ts"
    ]
}
